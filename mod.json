{
	"geode": "4.9.0",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074",
		"ios": "2.2074"
	},
	"id": "ninsam.to-do_list",
	"name": "To-Do List",
	"version": "v1.1.6",
	"developer": "NinSam",
	"description": "Adds a To-Do List in the GD editor",
	"dependencies":{

		"geode.node-ids": {
			"version": "1.21.1",
            "importance": "required"
		}
	},
	"tags": [
		"offline",
		"editor",
		"utility"
	],
	"links": {
		"source": "https://github.com/NinSam/To-Do-List"
	},
	"resources": {
		"sprites":["resources/notepad_btn.png"]
    },
	"settings":{

		"title-1": {
            "type": "title",
            "name": "Theme"
        },
		"theme-presets": {
            "type": "string",
            "name": "Theme Presets",
            "default": "Default",
			"one-of": ["Default", "Blue", "Green", "Purple", "Gray", "Geode Theme Color 1", "Geode Theme Color 2", "Geode Theme Color 3"]
        },
		"custom-theme-enable": {
			"type": "bool",
            "name": "Custom Theme",
            "default": false
        },
		"custom-theme": {
			"type": "rgb",
            "name": "Theme Color",
			"default": "#5C5C5C",
			"description": "Change the color of the background",
			"enable-if": "custom-theme-enable"
        },
		"title-2": {
            "type": "title",
            "name": "Notepad Button Color"
        },
		"button-color-presets": {
            "type": "string",
            "name": "Button Color Presets",
            "default": "Default",
			"one-of": ["Default", "Red", "Orange", "Yellow", "Green", "Blue", "Purple", "Pink"]
        },
		"custom-button-color-enable": {
			"type": "bool",
            "name": "Custom Button Color",
            "default": false
        },
		"custom-button-color": {
			"type": "rgb",
            "name": "Button Color",
			"description": "Change the color of the notepad button (requires exiting & re-entering the editor to take effect)",
			"default": "#5C5C5C",
			"enable-if": "custom-button-color-enable"
        }
	
	}

}